{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "type": "root",
          "style": "plain",
          "properties": {
            "prefix": "",
            "postfix": " ",
            "root_icon": "\uF0E7"
          }
        },
        {
          "style": "plain",
          "type": "session",
          "properties": {
            "prefix": "",
            "postfix": "",
            "display_host": false
          }
        },
        {
          "properties": {
            "prefix": "[",
            "postfix": "] ",
            "style": "full"
          },
          "style": "plain",
          "type": "path"
        },
        {
          "type": "poshgit",
          "style": "plain",
          "properties": {
            "prefix": ""
          }
        },
        {
          "foreground": "#e74856",
          "properties": {
            "prefix": "",
            "template": "[{{ .Code }}]"
          },
          "style": "plain",
          "type": "exit"
        }
      ],
      "type": "prompt"
    },
    {
      "type": "prompt",
      "newline": true,
      "alignment": "left",
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "properties": {
            "prefix": "",
            "text": ">"
          }
        }]
    }
  ]
}
